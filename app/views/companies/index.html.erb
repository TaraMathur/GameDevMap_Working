<div id="searching">
  <div id="search-bar">
    <div class="col-lg-3">
      <%= form_tag(companies_path, method: 'get', id: "search-form", class: "input-group") do %>
        <%= text_field_tag :search, params[:search], class: "form-control",placeholder: "Search" %>
        <span class="input-group-btn">
          <%= submit_tag "Search", class: 'btn btn-primary', value: "search" %>
          <%= submit_tag "Clear", class: 'btn btn-default', value: "clear" %>
        </span>

        <% end %>
    </div> <!-- col-lg-3 -->
  </div> <!-- search-bar -->

  <div id="filters">
      <%= form_tag(companies_path, method: 'get', id: "filters") do %>
        <%= select_tag :category_id, content_tag(:option,'All Categories',:value=>"",)+options_from_collection_for_select(Category.all, :id, :name) %>
        <%= select_tag :country_id, content_tag(:option,'All Countries',:value=>"")+options_from_collection_for_select(Country.all, :id, :name) %>
        <%= select_tag :state_prov_id, content_tag(:option,'All States/Provs',:value=>"")+options_from_collection_for_select(StateProv.all, :id, :name) %>
        <%= select_tag :city_id, content_tag(:option,'All Cities',:value=>"")+options_from_collection_for_select(City.all, :id, :name) %>
        <%= submit_tag "Clear", class: 'btn btn-default', value: "clear" %>
      <% end %>
  </div> <!-- filters -->

</div> <!-- searching -->

<br>
<br>

<% if false %>
  <%= form_tag companies_path, method: "get", id: "filter", class: "filter" do %>
    <%= label_tag "Category" %>
    <%= select "company", "countr", options_for_select([["United States","United States"],["United Kingdom","United Kingdom"]]), {prompt: 'All'}, onchange: "$('#filter').submit();" %>
  <% end %>
<% end %>

<% if @companies.blank? %>
  <h5>No companies. <%= params[:search] %>.</h5>
<% else %>
  <h5><%= @companies.size %> companies.</h5>
<% end %>

<table class="table table-bordered table-striped table-condensed">
	<tr>
		<th>Company</th>
		<th>Category</th>
		<th>City</th>
		<th>State/Prov</th>
		<th>Country</th>
	</tr>

	<% @companies.each do |company| %>
	<tr>
		<td><%=link_to company.name, "http://" + company.url %></td>
    <td><%= Category.find_by(id: company.category_id).name %></td>
		<td><%= company.get_city_name %></td>
		<td><%= company.get_stateprov_name %></td>
		<td><%= company.get_country_name %></td>
	</tr>
	<% end %>
</table>